<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% items.forEach(item =>{ %>
  <form action="">
    <div class="item">
      <input type="checkbox" />
      <p><%= item.name %></p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/" method="POST">
    <input
      type="text"
      name="nextItem"
      id="nextItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <!-- prettier-ignore -->
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>
<%- include("footer") -%>
